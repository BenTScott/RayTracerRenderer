{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build proj",
            "type": "shell",
            "command": "mingw32-make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "clean"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "run"
            ]
        },
        {
            "label": "runTests",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "tests"
            ]
        }
    ]
}